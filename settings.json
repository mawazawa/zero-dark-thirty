{
          "workbench.colorTheme": "Night Owl",
          "workbench.colorCustomizations": {
                    "editor.background": "#1A1B26",
                    "sideBar.background": "#16161E",
                    "terminal.background": "#1A1B26",
                    // Vibe-enhancing syntax highlighting
                    "editor.selectionBackground": "#3d59a1",
                    "editor.selectionHighlightBackground": "#2f3d6d",
                    "editor.lineHighlightBackground": "#202340"
          },
          // Disable VIM (because fuck that noise)
          "vim.enabled": false,
          // Enhanced logging and debugging
          "console.logs": {
                    "fontSize": "16px",
                    "fontFamily": "Fira Code",
                    "lineHeight": 1.6
          },
          // AI-assisted features
          "github.copilot.enable": true,
          "cursor.ai.enableAutoComplete": true,
          // Visual hierarchy improvements
          "editor.fontSize": 16,
          "editor.lineHeight": 28,
          "editor.fontFamily": "Fira Code, Menlo, Monaco",
          "editor.fontLigatures": true,
          // Enhanced debugging experience
          "debug.console.fontSize": 14,
          "debug.toolBar.visible": true,
          "debug.inlineValues": true,
          // Aesthetic improvements
          "workbench.iconTheme": "material-icon-theme",
          "editor.minimap.enabled": true,
          "editor.minimap.renderCharacters": false,
          "editor.minimap.maxColumn": 80,
          // ADHD-friendly features
          "editor.cursorBlinking": "smooth",
          "editor.cursorSmoothCaretAnimation": true,
          "editor.smoothScrolling": true,
          // Enhanced logging
          "console.logPatterns": {
                    "info": "üí°",
                    "warning": "‚ö†Ô∏è",
                    "error": "üî•",
                    "debug": "üêõ"
          },
          "user": {
                    "name": "mawazawa",
                    "email": "mawazawa@users.noreply.github.com",
                    "github": "mawazawa"
          },
          "editor": {
                    "theme": "dark",
                    "font": {
                              "family": "JetBrains Mono",
                              "size": 14,
                              "ligatures": true
                    }
          },
          "terminal": {
                    "shell": "/bin/bash",
                    "theme": "dark",
                    "font": {
                              "family": "JetBrains Mono",
                              "size": 14
                    }
          },
          "git": {
                    "defaultBranch": "main",
                    "commitMessageTemplate": "feat: %s",
                    "autoFetch": true,
                    "pruneOnFetch": true
          },
          "workflow": {
                    "autoSave": true,
                    "formatOnSave": true,
                    "lintOnSave": true,
                    "useTypeScript": true,
                    "useTailwind": true
          },
          "deployment": {
                    "platform": "vercel",
                    "autoDeployBranches": [
                              "main",
                              "develop"
                    ],
                    "productionBranch": "main"
          },
          // Chat panel position and text selection settings
          "workbench.activityBar.location": "side",
          "workbench.sideBar.location": "left",
          "workbench.panel.defaultLocation": "right",
          // Make text selection easier
          "editor.selectionClipboard": true,
          "editor.multiCursorModifier": "ctrlCmd",
          "editor.mouseWheelZoom": true,
          // Ensure chat is on right side
          "cursor.chat.position": "right"
}